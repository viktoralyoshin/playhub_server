generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          String      @id @default(uuid())
  username    String?
  email       String      @unique
  password    String
  level       Int         @default(1)
  createdAt   DateTime    @default(now())
  favoriteGames FavoriteGame[] 
}

model FavoriteGame{
  id          Int         @default(autoincrement()) @id
  name        String?
  user        User?       @relation(fields: [userId], references: [id])
  userId      String?   
}

model Picture{
  id          Int         @default(autoincrement()) @id
  src         String?
  game        Game?       @relation(fields: [gameId], references: [id])
  gameId      Int?
}

model Game{
  id          Int         @default(autoincrement()) @id
  name        String?     @unique
  developer   String?
  releaseDate String?    
  price       Int?
  pic         Picture[]
  description String?
}
